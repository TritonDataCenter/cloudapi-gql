{
  "extends": "joyent-portal",
  "plugins": ["graphql"],
  "rules": {
    "jsx-a11y/href-no-hash": 0,
    "graphql/template-strings": ["error", {
      "env": "apollo"
    }],
    "graphql/named-operations": ["error"],
    "graphql/required-fields": ["error", {
      "requiredFields": ["id"]
    }],
    "graphql/capitalized-type-name": ["error"]
  }
}
